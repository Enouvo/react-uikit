{
  "compilerOptions": {
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "react",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noEmit": false,
    "declaration": true,
    "outDir": "dist",
    "allowJs": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
  },
  "include": ["./src"],
  "exclude": ["dist", "node_modules"]
}
